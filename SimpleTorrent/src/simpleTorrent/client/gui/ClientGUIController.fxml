<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER" spacing="15.0">
        <Label text="Server IP:" />
        <TextField fx:id="serverIP" />
        <Label text="Port:" />
        <TextField fx:id="portTextField" />
    </HBox>
    <Button fx:id="connectToServerButton" text="Connect to server" />
    <ProgressBar fx:id="progressBar" prefHeight="23.0" prefWidth="500.0" />
    <ListView fx:id="files" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300" prefWidth="500.0" />
    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="selectDirectoryButton" text="Select directory to save" />
        <Label fx:id="selectedDirectoryLabel" />
    </HBox>
    <Button fx:id="downloadSelectedButton" text="Download selected file" />
    <Label fx:id="errors" maxHeight="Infinity" textFill="RED" />
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5" />
   </padding>
</VBox>
