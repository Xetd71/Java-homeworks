<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER" spacing="15.0">
        <Label text="Server IP:" />
        <Label fx:id="serverIP" disable="true" />
        <Label text="Port:" />
        <TextField fx:id="portTextField" />
    </HBox>
    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="selectDirectoryButton" minWidth="100" text="Select directory" />
        <Label fx:id="selectedDirectoryLabel" />
    </HBox>
    <Button fx:id="startServerButton" text="Start server" />
    <Label fx:id="errors" textFill="RED">
        <font>
            <Font size="12.0" />
        </font>
    </Label>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5" />
    </padding>
</VBox>
